alias ll='ls -l'
alias la='ls -la'
alias lt='ls -lt'
alias lta='ls -lta'

rgrep() {
    pat="$1"
    if [ -z "$1" ]; then
        echo "Usage: rgrep <keyword> [dir to search]"
    else
        if [ -z "$2" ]; then
            grep -s -r -i "$pat" .
        else
            grep -s -r -i "$pat" "$2"
        fi
    fi
}
